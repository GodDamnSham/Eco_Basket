            </column>
            <column name="kunden_id" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="POSITION">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="sortiment_id" type="uuid">
